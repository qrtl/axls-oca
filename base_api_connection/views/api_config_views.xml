<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="api_config_view_tree" model="ir.ui.view">
        <field name="name">api.config.tree</field>
        <field name="model">api.config</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>
    <record id="api_config_view_form" model="ir.ui.view">
        <field name="name">api.config.form</field>
        <field name="model">api.config</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="base_url" />
                        <field name="external_system" />
                        <field name="header_api_key_string" />
                        <field name="api_key" password="True" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="api_config_action" model="ir.actions.act_window">
        <field name="name">API Configuration</field>
        <field name="res_model">api.config</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="domain">[]</field>
    </record>
    <menuitem
        id="menu_base_api_connection"
        name="API Connection"
        parent="base.menu_administration"
        sequence="20"
    />
    <menuitem
        id="menu_api_configuration"
        action="api_config_action"
        parent="menu_base_api_connection"
        sequence="20"
    />
</odoo>

<odoo>
    <template
        id="responsive_web_layout"
        inherit_id="web.layout"
        name="Responsive Layout"
    >
        <xpath expr="//meta[last()]" position="after">
            <meta
                name="viewport"
                content="width=device-width, initial-scale=1, user-scalable=no"
            />
        </xpath>
    </template>
</odoo>
